<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1583753075968-1236ccb83c66?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=754&q=80);">
  <div class="container">
    <h1><%= @space.title %></h1>
    <p><%= @space.category  %></p>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-1">

      <div class="d-flex justify-content-between mt-3 pb-3 border-bottom align-items-center">
          <h3><%= @space.title %> | Host: <%= @space.user.first_name %> </h3>
          <img class="avatar-show" src="https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1643632919/d1mt43w8jp5gw34sdk6c.jpg" alt="">
      </div>
      <p class="mt-3"><strong>Adress:</strong> <%= @space.address %></p>
      <p class="border-bottom pb-3"><strong>About the space:</strong> <%= @space.info_space %></p>
      <p class="mt-3"><strong>About your host:</strong></p>
      <p> <%= @space.user.info_host %></p>
    </div>

    <div class="col-md-4 offset-md-1">
      <div class="card p-3 sticky-top border card-checkout">
        <h4 class="border-bottom pb-3 mb-4"><strong><%= @space.price_day %> CHF</strong> / day</h4>

        <%= render 'bookings/form' %>
      </div>


  </div>
</div>
